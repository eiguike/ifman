<% content_for :current_page do %>
  <%= page_indicator "Feature #{@feature}" %>
<% end%>

<%= render partial: "title", feature: @feature %>

<div class="row">
  <div class="col s12">
    <div class='card'>
      <div class='card-action'>
        <div class="row">
          <%= form_tag "#", :onSubmit => "return false" do %>
            <h5 class="header blue-text"><i class="material-icons">search</i> Search Users</h5>
            <div class="col s10">
              <%= text_field_tag 'search', nil %>
            </div>
            <div class="col s2">
              <%= button_tag 'Search', class: 'btn deep-purple', id: 'search-user' %>
            </div>
          <% end %>
          <div class="col s12" id='user-list'>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
